<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Platforms>AnyCPU</Platforms>
    <ApplicationIcon />
    <OutputType>Library</OutputType>
    <StartupObject />
    <RootNamespace>Transbank.POS</RootNamespace>
    <PackageLicenseUrl>https://raw.githubusercontent.com/TransbankDevelopers/transbank-pos-sdk-dotnet/master/LICENSE.md</PackageLicenseUrl>
    <Description>This is the .Net SDK for Transbank's Verifone VX520 and VX520c POS Integration.</Description>
    <PackageProjectUrl>http://www.transbankdevelopers.cl/</PackageProjectUrl>
    <PackageTags>payments, cl, chile, transbank, POS, Verifone, vx520, vx520c, integrated payment,</PackageTags>
    <PackageIconUrl>https://www.transbankdevelopers.cl//favicon.ico</PackageIconUrl>
    <Copyright>2019 - Transbank</Copyright>
    <RepositoryUrl>https://github.com/TransbankDevelopers/transbank-pos-sdk-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <VersionPrefix>2.1.2</VersionPrefix>
    <VersionSuffix>${VersionSuffix}</VersionSuffix>
    <Company>Transbank</Company>
    <Product>TransbankPOSSDK</Product>
    <Authors>Transbank</Authors>
  </PropertyGroup>

  <PropertyGroup>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MQTTnet" Version="3.0.8" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="TransbankSDK" Version="2.4.0" />
  </ItemGroup>

</Project>
